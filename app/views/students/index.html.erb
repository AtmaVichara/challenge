<h1>All Students</h1>

<% @students.each do |student| %>
<div class="student-<%= student.id %>">
  <p>
    <%= link_to student.name, student_path(student) %>
  </p>
  <%= link_to "Edit", edit_student_path(student) %>
  <%= link_to "Delete", student_path(student), method: :delete %>
</div>
  <% end %>

<%= link_to "Create New Student", new_student_path %>
